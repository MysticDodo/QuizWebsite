@model List<SimpleQuizApp.Models.Quiz>
@{
    ViewData["Title"] = "New Quiz";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="display-4">New Quiz</h1>
    <a asp-controller="Quiz" asp-action="CreateQuiz" class="btn btn-primary">Create Quiz</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model)
        {
            <tr>
                <td>@quiz.Title</td>
                <td>@quiz.Description</td>
                <td>Number of Questions: @quiz.Questions.Count</td>
                <td>
                    <form asp-action="AddQuiz" asp-route-id="@quiz" method="post" style="display:inline">
						<input type="hidden" name="quizId"" value="@quiz.Id" />
						<button type="submit" class="btn btn-sm btn-success">Add</button>
                    </form>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
